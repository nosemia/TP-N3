#include <iostream>
using namespace std;
int main()
{
 int valor, suma = 0, max, min;
 float promedio;
 for (int i = 0; i < 10; i++) {
 cout << "Ingrese un valor: ";
 cin >> valor;
 suma += valor;
 if (i == 0) {
 max = min = valor;
 } else {
 if (valor > max) max = valor;
 if (valor < min) min = valor;
 }
 }
 promedio = suma / 10.0;
 cout << "Suma: " << suma << ", Max: " << max << ", Min: " << min << ", Promedio: " << promedio << endl;
 return 0;
}
